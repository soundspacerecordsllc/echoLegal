# EchoLegal Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# BASE CONFIGURATION
# ===========================================
NEXT_PUBLIC_BASE_URL=https://echo-legal.com
NEXT_PUBLIC_SITE_URL=https://echo-legal.com

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Webhook secret from Stripe Dashboard > Webhooks
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Price ID for monthly recurring donations
# Create a recurring price in Stripe Dashboard
STRIPE_MONTHLY_DONATION_PRICE_ID=price_XXXXXXXX

# Legacy payment links (for simple contracts)
NEXT_PUBLIC_STRIPE_NDA_LINK=https://buy.stripe.com/your-nda-link
NEXT_PUBLIC_STRIPE_SERVICE_AGREEMENT_LINK=https://buy.stripe.com/your-service-link

# ===========================================
# GOOGLE ADSENSE (Optional)
# ===========================================
# Set to 'true' to enable display ads
NEXT_PUBLIC_ADS_ENABLED=false

# Your AdSense Publisher ID
NEXT_PUBLIC_ADSENSE_PUBLISHER_ID=ca-pub-XXXXXXXXXXXXXXXX

# ===========================================
# AI CONTENT GENERATION (Optional)
# ===========================================
# API key for AI service (Anthropic Claude, OpenAI, etc.)
AI_API_KEY=your_ai_api_key_here

# API base URL (default: Anthropic)
AI_API_URL=https://api.anthropic.com/v1

# ===========================================
# ANALYTICS (Optional)
# ===========================================
# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ===========================================
# MEMBERSHIP (Optional)
# ===========================================
# Stripe Price IDs for membership tiers
# Create these in Stripe Dashboard > Products
STRIPE_SUPPORTER_MONTHLY_PRICE_ID=price_XXXXXXXX
STRIPE_SUPPORTER_ANNUAL_PRICE_ID=price_XXXXXXXX
STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID=price_XXXXXXXX
